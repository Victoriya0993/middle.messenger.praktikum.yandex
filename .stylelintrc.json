{
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-class-pattern": null,
      "selector-list-comma-newline-after": "never-multi-line",
      "max-empty-lines": 2,
      "number-leading-zero": "never"
    },
    "ignoreFiles": [
      "build/*",
      "node_modules",
      "dist",
      "parcel-cache"
    ]
  } 